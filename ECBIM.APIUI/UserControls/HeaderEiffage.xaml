<UserControl x:Class="ECBIM.APIUI.HeaderEiffage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECBIM.APIUI"
             mc:Ignorable="d" d:DesignWidth="668.182" Height="30">
    <UserControl.Template>
        <ControlTemplate>
            <Border x:Name="Border" BorderThickness="0" Background="Red" CornerRadius="8,8,0,0" Grid.Column="1" Grid.Row="1">
                <Label Content="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type local:HeaderEiffage}}}" VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White" FontSize="14" Margin="0"/>
            </Border>
         
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
